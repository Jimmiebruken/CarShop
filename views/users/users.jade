extends ../layout

block content
    h1= title
    table.user_table
        tr
            th First Name
            th Last Name
            th Email
            th Username
            th Year of Birth
            if admin == true
                th Admin
                th Delete
        if user_list && user_list.length > 0
            each user in user_list
                tr
                    td #{user.first_name}
                    td #{user.last_name}
                    td #{user.email}
                    td #{user.username}
                    td #{user.birthyear}
                    if admin == true
                        if user.admin_is == false
                            td
                                a(href="users/admin?id=#{user.id}") Not Admin
                        else
                            td
                                a(href="users/admin_off?id=#{user.id}") Admin


                        td.center
                            a(href="/users/delete?id=#{user.id}")
                                img.icon(src="/images/delete.png")
        else
            tr

                td(colspan=6) No records