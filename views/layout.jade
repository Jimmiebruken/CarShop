doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js')

  body

    .layout-container
      .row
        .col-xs-4
          img.logo(src='/images/icon.png')
        .col-xs-4
          .title Car Part Shop
      .row
        .col-xs-4
          .menu-box
            a.menu(href="/") Home
            a.menu(href="/users") List Users
            a.menu(href="/users/add") Add User
            // checks for and gives admin acces
            if admin
              a.menu(href="/products/add") Add product
            a.menu(href="/products") Products
            // checks for current login session
            if userid
              a.menu(href="/dashboard") Dashboard
              a.menu(href="/logout") Logout
            else
              a.menu(href="/login") Login



    block content
